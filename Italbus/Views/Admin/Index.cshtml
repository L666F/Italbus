@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-8 m-auto text-center">
        @if (await userManager.IsInRoleAsync(await userManager.FindByNameAsync(User.Identity.Name), "Admin") || await userManager.IsInRoleAsync(await userManager.FindByNameAsync(User.Identity.Name), "CanEditHomepage"))
    {
        @Html.ActionLink("Edit Homepage", "EditHomepage", "Admin", null, new { @class = "btn btn-primary font-weight-bold w-75 m-2" })
}
        @if (await userManager.IsInRoleAsync(await userManager.FindByNameAsync(User.Identity.Name), "Admin") || await userManager.IsInRoleAsync(await userManager.FindByNameAsync(User.Identity.Name), "CanEditEvents"))
    {
        @Html.ActionLink("Edit Events", "EditEvents", "Admin", null, new { @class = "btn btn-primary font-weight-bold w-75 m-2" })
}
        @if (await userManager.IsInRoleAsync(await userManager.FindByNameAsync(User.Identity.Name), "Admin") || await userManager.IsInRoleAsync(await userManager.FindByNameAsync(User.Identity.Name), "CanManageUsers"))
    {
        @Html.ActionLink("Manage Users", "ManageUsers", "Admin", null, new { @class = "btn btn-primary font-weight-bold w-75 m-2" })
}

        @Html.ActionLink("Logout", "Logout", "Admin", null, new { @class = "btn btn-danger font-weight-bold w-75 m-5" })
    </div>
</div>